<h1>My Tasks:</h1>
<br>
<% @tasks.each do | task | %>
<%=  task.completed ? "[X]" : "[ ]"%> <%= link_to task.title, task_path(task) %> <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %><br>
<% end %>
<hr>
<%= link_to "Create a new task", new_task_path %>
